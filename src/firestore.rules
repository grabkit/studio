
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isUserActive() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      // The `lastReadTimestamps` check is a proxy to ensure the user document has been fully initialized
      // by our modern client, which includes the 'status' field.
      return userDoc.data.get('status', 'active') == 'active' && 'lastReadTimestamps' in userDoc.data;
    }

    match /users/{userId} {
      allow get: if true; // Allow public read for profiles
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      allow update: if isSignedIn() && (
        // Allow a user to update their own profile fields (excluding status).
        (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'email', 'blockedUsers', 'mutedUsers', 'restrictedUsers', 'lastReadTimestamps'])) ||
        // Allow any signed-in user to update only 'upvotes' and 'upvotedBy' on another user's profile.
        (request.resource.data.diff(resource.data).affectedKeys().hasAll(['upvotes', 'upvotedBy']))
      );
      allow delete: if false; // Deletes are not allowed.
    }
    
    match /users/{userId}/bookmarks/{postId} {
      allow list, get: if isOwner(userId);
      allow create, delete: if isOwner(userId) && isUserActive();
      allow update: if false;
    }
    
    match /users/{userId}/notifications/{notificationId} {
      allow get, list: if isOwner(userId);
      // Notifications can be created for any user, but the creator must be active.
      allow create: if isSignedIn() && isUserActive(); 
      allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow delete: if false;
    }

    match /posts/{postId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && isUserActive() && (isNewTextPost() || isNewPollPost());
      allow delete: if isSignedIn() && isUserActive() && isOwner(resource.data.authorId);
      allow update: if isSignedIn() && isUserActive() && (
          // Allow editing post content by owner
          (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['content', 'commentsAllowed'])) ||
          // Allow liking/unliking a post by any active user
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likeCount'])) ||
           // Allow updating comment count (by functions, basically)
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount'])) ||
          // Allow voting on a poll by any active user who hasn't voted yet
          (request.resource.data.diff(resource.data).affectedKeys().hasAll(['pollOptions', 'voters']) && !resource.data.voters.keys().hasAny([request.auth.uid]))
      );
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isUserActive() && isValidNewComment(postId, commentId);
      allow delete: if isSignedIn() && isUserActive() && (isOwner(resource.data.authorId) || isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId));
      allow update: if isSignedIn() && isUserActive() && isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
    }

    match /conversations/{conversationId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() && isUserActive() && request.auth.uid in request.resource.data.participantIds;
      allow update: if isSignedIn() && isUserActive() && request.auth.uid in resource.data.participantIds &&
                       request.resource.data.diff(resource.data).affectedKeys().hasAny(['lastMessage', 'lastUpdated', 'status', 'unreadCounts', 'lastReadTimestamps', 'mutedBy']);
      allow delete: if isSignedIn() && request.auth.uid in resource.data.participantIds;
    }

    match /conversations/{conversationId}/messages/{messageId} {
      allow read, list: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      allow create: if isSignedIn() && isUserActive() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds && isValidNewMessage();
      allow delete: if isSignedIn() && isUserActive() && isOwner(resource.data.senderId);
    }
    
     match /reports/{reportId} {
      allow read, list, update, delete: if false; // Only admins should be able to access reports
      allow create: if isSignedIn() && isUserActive() && isValidNewReport(reportId);
    }

    function isValidNewReport(reportId) {
      let data = request.resource.data;
      return data.id == reportId
        && data.reporterUserId == request.auth.uid
        && data.reportedUserId != request.auth.uid // Cannot report self
        && data.reason is string
        && data.status == 'pending'
        && data.keys().hasOnly(['id', 'reporterUserId', 'reportedUserId', 'reason', 'timestamp', 'status']);
    }

    function isValidNewMessage() {
      let data = request.resource.data;
      // Common validations
      return data.senderId == request.auth.uid
        && data.text is string && data.text.size() > 0 && data.text.size() <= 1000
        // Reply-specific validations (if reply fields exist)
        && (
             (!data.keys().hasAny(['replyToMessageId', 'replyToMessageText'])) ||
             (data.replyToMessageId is string && data.replyToMessageText is string)
           )
        // Ensure no other fields are present
        && data.keys().hasOnly(['id', 'senderId', 'text', 'timestamp', 'replyToMessageId', 'replyToMessageText']);
    }

    function isNewTextPost() {
      let data = request.resource.data;
      return data.type == 'text'
        && data.authorId == request.auth.uid
        && data.content is string && data.content.size() > 0 && data.content.size() <= 560
        && data.likeCount == 0
        && data.commentCount == 0
        && data.commentsAllowed is bool
        && data.likes is list && data.likes.size() == 0
        // Ensure no poll data is present
        && !data.keys().hasAny(['pollOptions', 'voters']);
    }

    function isNewPollPost() {
      let data = request.resource.data;
      return data.type == 'poll'
        && data.authorId == request.auth.uid
        && data.content is string && data.content.size() > 0 && data.content.size() <= 560
        && data.likeCount == 0
        && data.commentCount == 0
        && data.commentsAllowed is bool
        && data.likes is list && data.likes.size() == 0
        // Poll specific validations
        && data.pollOptions is list && data.pollOptions.size() >= 2 && data.pollOptions.size() <= 4
        && data.pollOptions[0].votes == 0 // Check votes on first option as a proxy
        && data.voters is map && data.voters.size() == 0;
    }


    function isValidNewComment(postId, commentId) {
        let data = request.resource.data;
        let post = get(/databases/$(database)/documents/posts/$(postId)).data;
        return post.commentsAllowed == true
            && data.authorId == request.auth.uid && data.postId == postId
            && data.content is string && data.content.size() > 0
            && data.id == commentId
            && data.status in ['approved', 'pending_approval']
            && data.keys().hasOnly(['id', 'postId', 'content', 'authorId', 'timestamp', 'status']);
    }
  }
}

    