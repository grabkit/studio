
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isCallParticipant(callId) {
      let callDoc = get(/databases/$(database)/documents/calls/$(callId));
      return request.auth.uid == callDoc.data.callerId || request.auth.uid == callDoc.data.calleeId;
    }

    function isVideoCallParticipant(videoCallId) {
      let callDoc = get(/databases/$(database)/documents/videoCalls/$(videoCallId));
      return request.auth.uid == callDoc.data.callerId || request.auth.uid == callDoc.data.calleeId;
    }

    match /users/{userId} {
      allow get: if true; 
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      allow update: if isSignedIn() && (
        (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['bio', 'website', 'gender', 'blockedUsers', 'mutedUsers', 'restrictedUsers', 'lastReadTimestamps', 'voiceStatusUrl', 'voiceStatusTimestamp', 'avatar', 'notificationSettings', 'username'])) ||
        (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasAll(['followingCount', 'following'])) ||
        (isOwner(userId) && !request.resource.data.keys().hasAll(['voiceStatusUrl', 'voiceStatusTimestamp']) && resource.data.keys().hasAll(['voiceStatusUrl', 'voiceStatusTimestamp'])) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasAll(['followersCount', 'followedBy']))
      );
      allow delete: if false; 
      
      match /replies/{commentId} {
        allow read, list: if isSignedIn();
        allow create, delete: if isSignedIn();
        allow update: if isOwner(userId) || isOwner(resource.data.authorId);
      }
    }
    
    match /users/{userId}/bookmarks/{postId} {
      allow list, get: if isOwner(userId);
      allow create, delete: if isOwner(userId);
      allow update: if false;
    }
    
    match /users/{userId}/notifications/{notificationId} {
      allow get, list: if isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow delete: if isOwner(userId) || isOwner(resource.data.fromUserId);
    }

    match /posts/{postId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && (isNewTextPost() || isNewPollPost() || isNewRepost() || isNewQuotePost() || isNewAudioPost() || isNewEventPost());
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      allow update: if isSignedIn() && (
          (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['content', 'commentsAllowed', 'isPinned', 'expiresAt'])) ||
          (request.resource.data.diff(resource.data).affectedKeys().hasAll(['likes', 'likeCount'])) ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount'])) ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['repostCount'])) ||
          (request.resource.data.diff(resource.data).affectedKeys().hasAll(['pollOptions', 'voters']) && !resource.data.voters.keys().hasAny([request.auth.uid]))
      );

       match /comments/{commentId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn() && isValidNewComment(postId, commentId);
        allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId));
        allow update: if isSignedIn() && (
            (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasAll(['content', 'lastEdited'])) ||
            (isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']))
        );
      }
    }

    match /events/{eventId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
    }
    
    match /conversations/{conversationId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'lastUpdated', 'status', 'mutedBy', 'unreadCounts', 'lastReadTimestamps', 'voiceCallsDisabledBy', 'videoCallsDisabledBy']);
      allow delete: if isSignedIn() && request.auth.uid in resource.data.participantIds;
    }

    match /conversations/{conversationId}/messages/{messageId} {
      allow read, list: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds && isValidNewMessage();
      allow delete: if isSignedIn() && isOwner(resource.data.senderId);
    }
    
    match /problemReports/{reportId} {
      allow create: if isSignedIn();
    }

    match /reports/{reportId} {
      allow read, list, update, delete: if false;
      allow create: if isSignedIn() && isValidNewReport(reportId);
    }

    match /calls/{callId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.callerId == request.auth.uid;
      allow update: if isCallParticipant(callId) && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'answer']));
      allow delete: if isCallParticipant(callId);
      
      match /callerCandidates/{candidateId} {
        allow read, list, create: if isSignedIn();
        allow update, delete: if false;
      }

      match /answerCandidates/{candidateId} {
          allow read, list, create: if isSignedIn();
          allow update, delete: if false;
      }
    }

    match /videoCalls/{videoCallId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.callerId == request.auth.uid;
      allow update: if isVideoCallParticipant(videoCallId) && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'answer']));
      allow delete: if isVideoCallParticipant(videoCallId);
      
      match /callerCandidates/{candidateId} {
        allow read, list, create: if isSignedIn();
        allow update, delete: if false;
      }

      match /answerCandidates/{candidateId} {
          allow read, list, create: if isSignedIn();
          allow update, delete: if false;
      }
    }

    match /rooms/{roomId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();

      match /messages/{messageId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
        allow update: if false;
        allow delete: if isOwner(resource.data.senderId);
      }
    }

    function isNewEventPost() {
        let data = request.resource.data;
        let allowedKeys = ['id', 'authorId', 'type', 'content', 'timestamp', 'likes', 'likeCount', 'commentCount', 'repostCount', 'commentsAllowed', 'eventDetails', 'isPinned', 'expiresAt'];
        return data.type == 'event'
            && data.authorId == request.auth.uid
            && data.eventDetails is map
            && data.eventDetails.keys().hasAll(['id', 'name', 'eventTimestamp', 'location'])
            && (data.content is string || !data.keys().has('content'))
            && data.keys().hasOnly(allowedKeys);
    }

    function isNewAudioPost() {
      let data = request.resource.data;
      let allowedKeys = ['id', 'authorId', 'type', 'content', 'timestamp', 'likes', 'likeCount', 'commentCount', 'repostCount', 'commentsAllowed', 'isPinned', 'expiresAt', 'audioUrl', 'audioWaveform', 'audioDuration'];
      return data.type == 'audio'
        && data.authorId == request.auth.uid
        && data.audioUrl is string
        && data.audioWaveform is list
        && data.audioDuration is number
        && (data.content is string || !data.keys().has('content')) 
        && !data.keys().hasAny(['pollOptions', 'voters', 'repostOf', 'quotedPost'])
        && data.keys().hasOnly(allowedKeys);
    }

    function isValidNewReport(reportId) {
      let data = request.resource.data;
      return data.id == reportId
        && data.reporterUserId == request.auth.uid
        && data.reportedUserId != request.auth.uid
        && data.reason is string
        && data.status == 'pending'
        && data.keys().hasOnly(['id', 'reporterUserId', 'reportedUserId', 'reason', 'timestamp', 'status']);
    }

    function isValidNewMessage() {
      let data = request.resource.data;
      let allowedKeys = ['id', 'senderId', 'text', 'timestamp', 'replyToMessageId', 'replyToMessageText', 'postId', 'isForwarded', 'linkMetadata'];
      return data.senderId == request.auth.uid
        && (
            (data.text is string && data.text.size() > 0 && data.text.size() <= 1000) || 
            (data.keys().has('postId') && data.postId is string) ||
            (data.keys().has('linkMetadata') && data.linkMetadata is map)
           )
        && (
             (!data.keys().hasAny(['replyToMessageId', 'replyToMessageText'])) ||
             (data.replyToMessageId is string && data.replyToMessageText is string)
           )
        && data.keys().hasOnly(allowedKeys);
    }
    
    function isNewRepost() {
        let data = request.resource.data;
        return data.type == 'repost'
            && data.authorId == request.auth.uid
            && data.repostOf is string
            && !data.keys().hasAny(['pollOptions', 'voters', 'quotedPost'])
            && data.keys().hasOnly(['id', 'authorId', 'type', 'repostOf', 'timestamp', 'likes', 'likeCount', 'commentCount', 'repostCount', 'commentsAllowed']);
    }

    function isNewQuotePost() {
        let data = request.resource.data;
        let allowedKeys = ['id', 'authorId', 'type', 'content', 'timestamp', 'likes', 'likeCount', 'commentCount', 'repostCount', 'commentsAllowed', 'quotedPost', 'isPinned', 'expiresAt'];
        return data.type == 'quote'
            && data.authorId == request.auth.uid
            && data.content is string
            && data.quotedPost is map
            && data.quotedPost.keys().hasAll(['id', 'authorId', 'content'])
            && !data.keys().hasAny(['pollOptions', 'voters', 'repostOf'])
            && data.keys().hasOnly(allowedKeys);
    }

    function isNewTextPost() {
      let data = request.resource.data;
      let allowedKeys = ['id', 'authorId', 'type', 'content', 'timestamp', 'likes', 'likeCount', 'commentCount', 'repostCount', 'commentsAllowed', 'isPinned', 'linkMetadata', 'expiresAt'];
      return (data.type == 'text' || !data.keys().has('type')) 
        && data.authorId == request.auth.uid
        && (data.content is string && data.content.size() > 0 && data.content.size() <= 560 || data.keys().has('linkMetadata'))
        && data.commentCount == 0
        && data.commentsAllowed is bool
        && data.isPinned == false
        && data.likeCount == 0
        && data.repostCount == 0
        && data.likes is list && data.likes.size() == 0
        && !data.keys().hasAny(['pollOptions', 'voters', 'repostOf', 'quotedPost'])
        && data.keys().hasOnly(allowedKeys);
    }

    function isNewPollPost() {
      let data = request.resource.data;
      let allowedKeys = ['id', 'authorId', 'type', 'content', 'timestamp', 'likes', 'likeCount', 'commentCount', 'repostCount', 'commentsAllowed', 'isPinned', 'pollOptions', 'voters', 'expiresAt'];
      return data.type == 'poll'
        && data.authorId == request.auth.uid
        && data.content is string && data.content.size() > 0 && data.content.size() <= 560
        && data.commentCount == 0
        && data.commentsAllowed is bool
        && data.isPinned == false
        && data.likeCount == 0
        && data.repostCount == 0
        && data.likes is list && data.likes.size() == 0
        && data.pollOptions is list && data.pollOptions.size() >= 2 && data.pollOptions.size() <= 4
        && data.pollOptions[0].votes == 0
        && data.voters is map && data.voters.size() == 0
        && !data.keys().hasAny(['repostOf', 'quotedPost'])
        && data.keys().hasOnly(allowedKeys);
    }


    function isValidNewComment(postId, commentId) {
        let data = request.resource.data;
        let post = get(/databases/$(database)/documents/posts/$(postId)).data;
        return post.commentsAllowed == true
            && data.authorId == request.auth.uid && data.postId == postId
            && data.content is string && data.content.size() > 0
            && data.id == commentId
            && data.status in ['approved', 'pending_approval']
            && data.keys().hasOnly(['id', 'postId', 'content', 'authorId', 'timestamp', 'status', 'lastEdited', 'postAuthorId']);
    }
  }
}
