
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      allow update, delete: if false; // Profile updates/deletes not implemented
    }
    
    match /users/{userId}/bookmarks/{postId} {
      allow list, get, create, delete: if isOwner(userId);
      allow update: if false;
    }
    
    match /users/{userId}/notifications/{notificationId} {
      allow get, list: if isOwner(userId);
      allow create: if isSignedIn(); // Allow any signed in user to create a notification for another user
      allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']); // Allow user to mark their notifications as read
      allow delete: if false;
    }

    match /posts/{postId} {
      allow get, list: if isSignedIn();
      // Allow create if the user is signed in and the new data is a valid text post OR a valid poll post.
      allow create: if isSignedIn() && (isNewTextPost() || isNewPollPost());
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      allow update: if isSignedIn() && (
          // Allow editing post content
          (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['content', 'commentsAllowed'])) ||
          // Allow liking/unliking a post
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likeCount'])) ||
           // Allow updating comment count
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount'])) ||
          // Allow voting on a poll
          (request.resource.data.diff(resource.data).affectedKeys().hasAll(['pollOptions', 'voters']) && !resource.data.voters.keys().hasAny([request.auth.uid]))
      );
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isValidNewComment(postId, commentId);
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId));
    }

    match /conversations/{conversationId} {
      // A user can read a conversation if their UID is in the participantIds array.
      // This single 'read' rule covers both 'get' and 'list' operations.
      // Firestore's query mechanism ensures this rule is checked for every document a 'list' (query) operation tries to return.
      allow read: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      // A user can create a conversation if their UID is in the new document's participantIds
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      // A participant can update the status (e.g., to accept a request) or last message
      allow update: if isSignedIn() && request.auth.uid in resource.data.participantIds &&
                       request.resource.data.diff(resource.data).affectedKeys().hasAny(['lastMessage', 'lastUpdated', 'status']);
    }

    match /conversations/{conversationId}/messages/{messageId} {
      // A participant of the conversation can read messages
      allow read, list: if isSignedIn() && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      // A participant can create a message and they must be the sender
      allow create: if isSignedIn() && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]) && request.resource.data.senderId == request.auth.uid;
    }
    
    function isNewTextPost() {
      let data = request.resource.data;
      return data.type == 'text'
        && data.authorId == request.auth.uid
        && data.content is string && data.content.size() > 0 && data.content.size() <= 560
        && data.likeCount == 0
        && data.commentCount == 0
        && data.commentsAllowed is bool
        && data.likes is list && data.likes.size() == 0
        // Ensure no poll data is present
        && !data.keys().hasAny(['pollOptions', 'voters']);
    }

    function isNewPollPost() {
      let data = request.resource.data;
      return data.type == 'poll'
        && data.authorId == request.auth.uid
        && data.content is string && data.content.size() > 0 && data.content.size() <= 560
        && data.likeCount == 0
        && data.commentCount == 0
        && data.commentsAllowed is bool
        && data.likes is list && data.likes.size() == 0
        // Poll specific validations
        && data.pollOptions is list && data.pollOptions.size() >= 2 && data.pollOptions.size() <= 4
        && data.pollOptions[0].votes == 0 // Check votes on first option as a proxy
        && data.voters is map && data.voters.size() == 0;
    }


    function isValidNewComment(postId, commentId) {
        let data = request.resource.data;
        let post = get(/databases/$(database)/documents/posts/$(postId)).data;
        return post.commentsAllowed == true
            && data.authorId == request.auth.uid && data.postId == postId
            && data.content is string && data.content.size() > 0
            && data.id == commentId
            && data.keys().hasOnly(['id', 'postId', 'authorId', 'content', 'timestamp']);
    }
  }
}
