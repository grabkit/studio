
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow delete: if isOwner(userId);
      allow create: if isOwner(userId)
                    && request.resource.data.id == userId
                    && request.resource.data.name is string
                    && request.resource.data.email is string;
      allow update: if false;
    }
    
    match /users/{userId}/bookmarks/{postId} {
      allow read, write: if isOwner(userId);
    }

    match /posts/{postId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && isValidNewPost();
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      allow update: if isSignedIn() && (
          (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['content', 'commentsAllowed'])) ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likeCount']) && (request.resource.data.likeCount == resource.data.likeCount + 1 || request.resource.data.likeCount == resource.data.likeCount - 1)) ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount']) && (request.resource.data.commentCount == resource.data.commentCount + 1 || request.resource.data.commentCount == resource.data.commentCount - 1))
      );
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isValidNewComment(postId, commentId);
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId));
    }

    function isValidNewPost() {
        let data = request.resource.data;
        return data.authorId == request.auth.uid
            && data.id == request.id
            && data.content is string && data.content.size() > 0
            && data.likeCount == 0 && data.commentCount == 0
            && data.commentsAllowed is bool && data.likes is list && data.likes.size() == 0;
    }

    function isValidNewComment(postId, commentId) {
        let data = request.resource.data;
        let post = get(/databases/$(database)/documents/posts/$(postId)).data;
        let commentsAllowed = post.get('commentsAllowed', true);
        return commentsAllowed == true
            && data.authorId == request.auth.uid && data.postId == postId
            && data.content is string && data.content.size() > 0
            && data.id == commentId
            && data.keys().hasOnly(['id', 'postId', 'authorId', 'content', 'timestamp']);
    }
  }
}
