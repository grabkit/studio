rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Return true if the user's UID exists in a list
    function uidInList(list) {
      return request.auth.uid in list;
    }

    // VALIDATION FUNCTIONS
    
    // Validate the incoming User document on create/update.
    function isValidUser(userId) {
      let data = request.resource.data;
      return data.id == userId
          && data.keys().hasOnly(['id', 'anonymousId', 'name', 'email']);
    }

    // Validate incoming Post data on create. Ensures author is correct and defaults are set.
    function isValidNewPost() {
        let data = request.resource.data;
        return data.authorId == request.auth.uid
            && data.content is string
            && data.content.size() > 0
            && data.likeCount == 0
            // Ensure `likes` is an empty list on creation
            && data.likes is list
            && data.likes.size() == 0;
    }
    
    // Validate that a user is ONLY liking or unliking a post.
    // Any signed-in user can perform this action on any post.
    function isLikingOrUnliking() {
        let incoming = request.resource.data;
        let existing = resource.data;
        
        // --- Core data integrity check ---
        // Ensure that only `likes` and `likeCount` are being modified.
        // All other fields must remain the same.
        let otherFieldsUnchanged = incoming.content == existing.content
                              && incoming.authorId == existing.authorId
                              && incoming.timestamp == existing.timestamp;
                              
        if (!otherFieldsUnchanged) {
          return false;
        }

        // --- Like action validation ---
        // To "like", the user's UID must be added to the `likes` array,
        // and the `likeCount` must be incremented by exactly 1.
        let isLiking = incoming.likes == existing.likes.append(request.auth.uid)
                    && incoming.likeCount == existing.likeCount + 1;

        // --- Unlike action validation ---
        // To "unlike", the user's UID must be removed from the `likes` array,
        // and the `likeCount` must be decremented by exactly 1.
        let isUnliking = incoming.likes == existing.likes.removeAll([request.auth.uid])
                      && incoming.likeCount == existing.likeCount - 1;

        // The operation is valid if it's either a like or an unlike.
        return isLiking || isUnliking;
    }
    
    function isOnlyUpdatingContent() {
      let incoming = request.resource.data;
      let existing = resource.data;
      return incoming.content != existing.content
             && incoming.authorId == existing.authorId
             && incoming.timestamp == existing.timestamp
             && incoming.likeCount == existing.likeCount
             && incoming.likes == existing.likes;
    }

    // RULES
    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disable user enumeration for privacy.
      allow create: if isOwner(userId) && isValidUser(userId);
      allow update: if isOwner(userId) && isValidUser(userId);
      allow delete: if isOwner(userId);
    }
    
    match /posts/{postId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && isValidNewPost();
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      
      // An update is allowed if:
      // 1. Any signed-in user is liking/unliking the post.
      // OR
      // 2. The owner of the post is updating its content.
      allow update: if isSignedIn() && (isLikingOrUnliking() || (isOwner(resource.data.authorId) && isOnlyUpdatingContent()));
    }
  }
}
