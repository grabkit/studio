/**
 * Core Philosophy: This ruleset supports a public social media model. User profiles
 * are private, but posts are public to all authenticated users.
 *
 * Data Structure:
 * - User profiles: `/users/{userId}` (private to the owner)
 * - Posts: `/posts/{postId}` (publicly readable)
 *
 * Key Security Decisions:
 * - User Enumeration is Disabled: Listing documents from the top-level `/users`
 *   collection is explicitly forbidden to protect user privacy.
 * - Public Read on Posts: All authenticated users can read documents from the
 *   top-level `/posts` collection.
 * - Strict Ownership on Writes: Only the author of a post can create or delete it.
 * - Liking Posts: Any authenticated user can "like" a post, which adds their UID to the
 *   `likes` array and increments `likeCount`. This is a controlled update.
 * - Data Integrity: Rules enforce that the `authorId` is correctly set and
 *   immutable, ensuring clear ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Validates the incoming User document on create/update.
    function hasValidUserData(userId) {
      let incomingData = request.resource.data;
      return incomingData.id == userId;
    }

    function isUpdatingValidUserData() {
      let incomingData = request.resource.data;
      let existingData = resource.data;
      return incomingData.id == existingData.id;
    }

    // Validates incoming Post data on create.
    function hasValidPostData(userId) {
        let incomingData = request.resource.data;
        return incomingData.authorId == userId
            && incomingData.likeCount == 0
            && incomingData.likes is list
            && incomingData.likes.size() == 0;
    }

    function isLikingOrUnlikingPost(userId) {
      let incomingData = request.resource.data;
      let existingData = resource.data;
      let diff = incomingData.likes.diff(existingData.likes);

      // Check that only likes and likeCount are being changed.
      // All other fields must remain the same.
      let otherFieldsUnchanged = incomingData.keys().removeAll(['likes', 'likeCount']).size() == existingData.keys().removeAll(['likes', 'likeCount']).size()
        && incomingData.content == existingData.content
        && incomingData.authorId == existingData.authorId
        && incomingData.id == existingData.id
        && incomingData.timestamp == existingData.timestamp;


      // When liking, only the user's own UID is added
      let isLiking = diff.added().size() == 1 && diff.added()[0] == userId && diff.removed().size() == 0;
      let likeCountIncremented = incomingData.likeCount == existingData.likeCount + 1;

      // When unliking, only the user's own UID is removed
      let isUnliking = diff.removed().size() == 1 && diff.removed()[0] == userId && diff.added().size() == 0;
      let likeCountDecremented = incomingData.likeCount == existingData.likeCount - 1;

      return otherFieldsUnchanged && ((isLiking && likeCountIncremented) || (isUnliking && likeCountDecremented));
    }


    /**
     * @description Rules for user profiles. Only the owner can access their own profile.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users
      allow create: if isOwner(userId) && hasValidUserData(userId);
      allow update: if isOwner(userId) && isUpdatingValidUserData();
      allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for the global posts collection.
     */
    match /posts/{postId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && hasValidPostData(request.auth.uid);
      allow update: if isSignedIn() && (
        (resource.data.authorId == request.auth.uid) || // Owner can update
        isLikingOrUnlikingPost(request.auth.uid) // Any user can like/unlike
      );
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }
  }
}
