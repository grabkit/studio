rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Return true if the user's UID exists in a list
    function uidInList(list) {
      return request.auth.uid in list;
    }

    // VALIDATION FUNCTIONS
    
    // Validate the incoming User document on create/update.
    function isValidUser(userId) {
      let data = request.resource.data;
      return data.id == userId
          && data.keys().hasOnly(['id', 'anonymousId', 'name', 'email']);
    }

    // Validate incoming Post data on create. Ensures author is correct and defaults are set.
    function isValidNewPost() {
        let data = request.resource.data;
        return data.authorId == request.auth.uid
            && data.content is string
            && data.content.size() > 0
            && data.likeCount == 0
            && data.commentCount == 0
            // Ensure `likes` is an empty list on creation
            && data.likes is list
            && data.likes.size() == 0;
    }
    
    function isValidNewComment(postId) {
        let data = request.resource.data;
        return data.authorId == request.auth.uid
            && data.postId == postId
            && data.content is string
            && data.content.size() > 0
            && data.id is string
            && data.timestamp == request.time
            && data.keys().hasOnly(['id', 'postId', 'authorId', 'content', 'timestamp']);
    }
    
    // RULES
    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disable user enumeration for privacy.
      allow create: if isOwner(userId) && isValidUser(userId);
      allow update: if isOwner(userId) && isValidUser(userId);
      allow delete: if isOwner(userId);
    }
    
    match /posts/{postId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && isValidNewPost();
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      
      // Allow updates only for specific, controlled scenarios.
      allow update: if isSignedIn() && (
          // Scenario 1: The owner is updating ONLY the content.
          (isOwner(resource.data.authorId) && request.resource.data.content != resource.data.content && request.resource.data.keys().hasOnly(['content'])) ||
          
          // Scenario 2: ANY user is liking/unliking the post.
          (request.resource.data.likeCount == resource.data.likeCount + 1 || request.resource.data.likeCount == resource.data.likeCount - 1) ||

          // Scenario 3: The comment count is being incremented/decremented.
          (request.resource.data.commentCount == resource.data.commentCount + 1 || request.resource.data.commentCount == resource.data.commentCount - 1)
      );
    }
    
    match /posts/{postId}/comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isValidNewComment(postId);
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.authorId));
    }
  }
}
