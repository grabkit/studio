/**
 * Core Philosophy: This ruleset supports a public social media model. User profiles
 * are private, but posts are public to all authenticated users.
 *
 * Data Structure:
 * - User profiles: `/users/{userId}` (private to the owner)
 * - Posts: `/posts/{postId}` (publicly readable)
 *
 * Key Security Decisions:
 * - User Enumeration is Disabled: Listing documents from the top-level `/users`
 *   collection is explicitly forbidden to protect user privacy.
 * - Public Read on Posts: All authenticated users can read documents from the
 *   top-level `/posts` collection.
 * - Strict Ownership on Writes: Only the author of a post can create, update, or
 *   delete it. This is enforced by checking `request.auth.uid` against the
 *   `authorId` field in the post document.
 * - Data Integrity: Rules enforce that the `authorId` is correctly set and
 *   immutable, ensuring clear ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Validates the incoming User document on create/update.
    function hasValidUserData(userId) {
      let incomingData = request.resource.data;
      return incomingData.id == userId;
    }

    function isUpdatingValidUserData() {
      let incomingData = request.resource.data;
      let existingData = resource.data;
      return incomingData.id == existingData.id;
    }

    // Validates incoming Post data on create/update.
    function hasValidPostData(userId) {
        let incomingData = request.resource.data;
        return incomingData.authorId == userId;
    }

    function isUpdatingValidPostData(userId) {
        let incomingData = request.resource.data;
        let existingData = resource.data;
        return hasValidPostData(userId) && incomingData.id == existingData.id;
    }


    /**
     * @description Rules for user profiles. Only the owner can access their own profile.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users
      allow create: if isOwner(userId) && hasValidUserData(userId);
      allow update: if isOwner(userId) && isUpdatingValidUserData();
      allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for the global posts collection.
     */
    match /posts/{postId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && hasValidPostData(request.auth.uid);
      allow update: if isSignedIn() && resource.data.authorId == request.auth.uid && isUpdatingValidPostData(request.auth.uid);
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }
  }
}
